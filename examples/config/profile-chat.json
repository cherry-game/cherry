{
  "env": "chat",
  "debug": true,
  "@debug": "是否为debug模式",
  "print_level": "debug",
  "@print_level": "设置cherry引擎内部的日志打印等级为debug",
  "include": [
    "common/logger.json"
  ],
  "@include" : "include用于引用其他的配置文件。多环境配置的开发过程中可以抽像一些通用的配置",
  "cluster": {
    "discovery": {
      "mode": "nats",
      "@mode1": "mode=default,从profile-{x}.json读取node节点的配置数据",
      "@mode2": "mode=nats,通过nats->master_node_id获取已注册的节点",
      "@mode3": "mode=etcd,通过etcd同步已注册节点"
    },
    "nats": {
      "master_node_id": "chat-master",
      "address": "nats://127.0.0.1:4222",
      "reconnect_delay": 1,
      "max_reconnects": 0,
      "request_timeout": 2,
      "user": "",
      "password": ""
    }
  },
  "node": {
    "master": [
      {
        "enable": true,
        "node_id": "chat-master",
        "address": "",
        "__settings__": {
          "ref_logger": "master_log"
        }
      }
    ],
    "room": [
      {
        "enable": true,
        "node_id": "room-1",
        "address": ":34590",
        "__settings__": {
          "ref_logger": "room_log"
        }
      }
    ],
    "log": [
      {
        "enable": true,
        "node_id": "log-1",
        "__settings__": {
          "ref_logger": "log_log"
        }
      }
    ]
  }
}