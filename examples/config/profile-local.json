{
  "env": "local",
  "debug": true,
  "print_level": "debug",
  "cluster": {
    "discovery": {
      "mode": "nats",
      "@mode": "mode=default,从profile-{x}.json读取node节点的配置数据",
      "@mode": "mode=nats,通过nats->master_node_id获取已注册的节点",
      "@mode": "mode=etcd,通过etcd同步已注册节点"
    },
    "nats": {
      "master_node_id": "master-1",
      "address": "nats://dev.com:4222",
      "reconnect_delay": 1,
      "max_reconnects": 0,
      "request_timeout": 2,
      "user": "",
      "password": ""
    }
  },
  "node": {
    "web": [
      {
        "node_id": "web-1",
        "address": ":10820",
        "__settings__": {
          "maintain_state": 2,
          "ref_logger": "game_log"
        },
        "enable": true
      }
    ],
    "game": [
      {
        "node_id": "game-1",
        "address": ":34590",
        "__settings__": {
          "maintain_state": 2,
          "db_id_list" : {
            "game_db_id": "game_db_1"
          },
          "ref_logger": "game_log"
        },
        "enable": true
      }
    ],
    "master": [
      {
        "node_id": "master-1",
        "address": ":30000",
        "__settings__": {
          "ref_logger": "game_log"
        },
        "enable": true
      }
    ]
  },
  "logger": {
    "game_log": {
      "level": "debug",
      "enable_write_file": false,
      "enable_console": true,
      "file_link_path": "logs/game.log",
      "file_path_format": "logs/game_%Y%m%d%H%M.log"
    },
    "test_handler": {
      "level": "debug",
      "enable_write_file": false,
      "enable_console": true,
      "file_link_path": "logs/test_handler.log",
      "file_path_format": "logs/test_handler_%Y%m%d%H%M.log"
    }
  },
  "data_config": {
    "parser": "json",
    "data_source": "file",
    "file": {
      "file_path": "data/",
      "ext_name": ".json",
      "reload_time": 3000
    },
    "redis": {
      "prefix_key": "data_config",
      "subscribe_key": "data_config_change",
      "address": "dev.com:6379",
      "password": "",
      "db": 7
    }
  },
  "db_queue": {
    "db_pool_size": "4",
    "table_submit_frequency": "1000",
    "table_submit_num": "200",
    "shutdown_table_submit_frequency": "1000",
    "shutdown_table_submit_num": "200"
  },
  "db": {
    "center_db_group": [
      {
        "enable": true,
        "db_id": "center_db_1",
        "db_name": "dev_xgame_center",
        "host": "dev.com",
        "user_name": "gameserver",
        "password": "password",
        "max_idle_connect": 4,
        "max_open_connect": 8,
        "log_mode": true
      }
    ],
    "game_db_group": [
      {
        "enable": true,
        "db_id": "game_db_1",
        "db_name": "game_db_1",
        "host": "dev.com",
        "user_name": "gameserver",
        "password": "password",
        "max_idle_connect": 4,
        "max_open_connect": 8,
        "log_mode": true
      }
    ]
  }
}